{
    "name": "CIFAR10",
    "n_gpu": 1,
    
    "dataextract": {
        "type": "Extractor",
        "args": {
            "root": "data",
            "base": "cifar-10-batches-py",
            "datalist": ["data_batch_1","data_batch_2","data_batch_3","data_batch_4","data_batch_5"]
        }
    },
    
    "trainloader": {
        "type": "DataLoader",
        "args": {
            "data_dir": "data/cifar-10-batches-py",
            "file": "training.pickle",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 4,
            "input_size": 32
        }
    },
    
    "testloader": {
        "type": "TestLoader",
        "args": {
            "data_dir": "data/cifar-10-batches-py",
            "file": "test_batch",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 4,
            "input_size": 32
        }
    },
    
    "arch": {
        "type": "Net",
        "args": {
            "classes" : 10
        }
    },
    
    "loss": "crossentropyloss",
    
    "metrics": [
        "overall_acc", "top3_acc"
    ],
    
    "class_metric": "class_accuracy",
    
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001, 
            "momentum": 0.9
        }
    },
    
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 7,
            "gamma": 0.1
        }
    },
    
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }

}
