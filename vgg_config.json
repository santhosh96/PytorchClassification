{
    "name": "CIFAR10",
    "n_gpu": 1,
    
    "arch": {
        "type": "VGG19Model",
        "args": {
            "trained": true,
            "classes": 10,
            "model_path": "/data/projects/StreetCleanliness/Datasets/LA_Segregated_Street_Images_New/Cropped/santhosh/models"
        }
    },
    
    "train_data_loader": {
        "type": "StrClnDataLoader",
        "args":{
             "data_dir":"/data/projects/StreetCleanliness/Datasets/LA_Segregated_Street_Images_New/Cropped/santhosh/data/train.txt",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "input_size": 224
        }
    },
    
    "valid_data_loader": {
        "type": "StrClnDataLoader",
        "args":{
             "data_dir":"/data/projects/StreetCleanliness/Datasets/LA_Segregated_Street_Images_New/Cropped/santhosh/data/test.txt",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "input_size": 224
        }
    },
    
    "loss": "crossentropyloss",
    
    "metrics": [
        "overall_acc", "top3_acc"
    ],
    
    "class_metric": "class_accuracy",
    
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001, 
            "momentum": 0.9
        }
    },
    
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 7,
            "gamma": 0.1
        }
    },
    
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
